---
import { marked } from 'marked';
import siteConfig from '../data/site-config';

const hero = siteConfig.hero;
const socialLinks = siteConfig.socialLinks;
const skills = siteConfig.skills;
const experience = siteConfig.experience;
---

{
    (hero?.title || hero?.image?.src || hero?.text || socialLinks?.length > 0) && (
        <section class="w-full flex flex-col gap-8 mb-16 sm:mb-24">
            {hero.title && <h1 class="text-3xl leading-tight font-serif font-medium sm:text-5xl sm:leading-tight">{hero.title}</h1>}
            
            {hero.image?.src && (
                <figure>
                    <img
                        class="w-full rounded-lg"
                        src={hero.image.src}
                        loading="lazy"
                        decoding="async"
                        alt={hero.image.alt || ''}
                    />
                    {hero.image.caption && <figcaption class="mt-1.5 text-xs sm:text-sm">{hero.image.caption}</figcaption>}
                </figure>
            )}
            
            {hero.text && (
                <div class="max-w-none prose prose-dante sm:prose-lg">
                    <p>Iâ€™m Emil Karlsson, a Project Manager and Data Engineer passionate about solving complex problems.</p>
                    <p>I specialize in data pipelines, analytics, project management, GDPR and Privacy, and team leadership.</p>
                    <p>I thrive on collaboration and creativity, combining technical expertise with innovative thinking to deliver impactful solutions.</p>
                    <p>Outside work, I enjoy analyzing hockey stats, coaching on the rink, and exploring the latest tech trends.</p>
                </div>
            )}
            
            {socialLinks?.length > 0 && (
                <div class="social-links mt-8">
                    <h2 class="mb-4 text-lg font-serif italic sm:text-xl">Social</h2>
                    <div class="flex gap-4 flex-wrap">
                        {socialLinks.map((link) => (
                            <a
                                href={link.href}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="inline-flex items-center justify-center px-4 py-2 font-serif text-sm italic text-main bg-muted rounded-lg transition hover:bg-main hover:text-white"
                            >
                                {link.text}
                            </a>
                        ))}
                    </div>
                </div>
            )}
            
            {experience && (
                <div class="experience mt-8">
                    <h2 class="mb-4 text-lg font-serif italic sm:text-xl">Experience</h2>
                    {experience.technical?.length > 0 && (
                        <div class="technical mt-6">
                            <h3 class="mb-4 font-medium text-base sm:text-lg">Technical Experience</h3>
                            <div class="flex gap-4 flex-wrap">
                                {experience.technical.map((item) => (
                                    <a href="#" class="inline-flex items-center justify-center px-4 py-2 font-serif text-sm italic text-main bg-muted rounded-lg transition hover:bg-main hover:text-white">
                                        {item}
                                    </a>
                                ))}
                            </div>
                        </div>
                    )}
                    {experience.leadership?.length > 0 && (
                        <div class="leadership mt-6">
                            <h3 class="mb-4 font-medium text-base sm:text-lg">Leadership Experience</h3>
                            <div class="flex gap-4 flex-wrap">
                                {experience.leadership.map((item) => (
                                    <a href="#" class="inline-flex items-center justify-center px-4 py-2 font-serif text-sm italic text-main bg-muted rounded-lg transition hover:bg-main hover:text-white">
                                        {item}
                                    </a>
                                ))}
                            </div>
                        </div>
                    )}
                </div>
            )}
            
            {skills?.length > 0 && (
                <div class="skills mt-8">
                    <h2 class="mb-4 text-lg font-serif italic sm:text-xl">Skills</h2>
                    {skills.map((skill) => (
                        <div class="mb-6">
                            <h3 class="mb-4 font-medium">{skill.category}</h3>
                            <div class="flex gap-2 flex-wrap">
                                {skill.items.map((item) => (
                                    <a
                                        href={item.url || '#'}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="inline-flex items-center justify-center px-4 py-2 font-serif text-sm italic text-main bg-muted rounded-lg transition hover:bg-main hover:text-white"
                                    >
                                        {item.text}
                                    </a>
                                ))}
                            </div>
                        </div>
                    ))}
                </div>
            )}
        </section>
    )
}